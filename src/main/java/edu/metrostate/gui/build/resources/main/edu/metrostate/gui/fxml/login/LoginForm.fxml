<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:id="loginForm"
           fx:controller="edu.metrostate.gui.login.LoginController"
           alignment="CENTER"
           >
    <stylesheets>
        <URL value="@LoginForm.css" />
    </stylesheets>
    <GridPane vgap="12.0" maxHeight="300.0" >
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="100.0" prefWidth="100.0" minWidth="100.0"/>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="56.0" prefHeight="56.0"/>
        </rowConstraints>
        <padding>
            <Insets left="12.0" right="12.0"/>
        </padding>
        <Label styleClass="loginTitle" text="Login" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
        <Label styleClass="formLabel" text="Username" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label styleClass="formLabel" text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="loginButton" text="Login" GridPane.rowIndex="3" GridPane.columnSpan="2" prefWidth="200.0"/>
    </GridPane>
</StackPane>